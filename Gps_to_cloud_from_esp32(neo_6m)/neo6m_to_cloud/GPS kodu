#include <HardwareSerial.h>
#include <TinyGPS++.h>

TinyGPSPlus gps;
HardwareSerial gpsSerial(1); // Use the second hardware serial port (UART 1)

void setup() {
  Serial.begin(115200); // Start the serial communication with your computer
  gpsSerial.begin(9600, SERIAL_8N1, 17, -1); // Start GPS serial communication; TX pin is not used, so -1
  Serial.println("GPS Receiver Test");
}

void loop() {
  while (gpsSerial.available() > 0) {
    char c = gpsSerial.read();
    if (gps.encode(c)) { // Try to get new data from the chip
      if (gps.location.isValid()) {
        Serial.print("Latitude: ");
        Serial.println(gps.location.lat(), 6);
        Serial.print("Longitude: ");
        Serial.println(gps.location.lng(), 6);
      } else {
        Serial.println("Waiting for GPS signal...");
      }
    }
  }
}
